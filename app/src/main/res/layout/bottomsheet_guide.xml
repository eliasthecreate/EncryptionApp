<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    app:cardCornerRadius="20dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Learn Encryption"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#FF000000"
                android:layout_marginBottom="12dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Encryption turns readable text into an unreadable string using a password-derived key. Decryption reverses it using the same password. This app uses AES-256 with a random salt and IV for each encryption."
                android:textSize="14sp"
                android:textColor="#666666"
                android:lineSpacingExtra="4dp"
                android:layout_marginBottom="16dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="How to Encrypt"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#FF000000"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1. Select Encrypt Text\n2. Enter your message\n3. Enter a strong password\n4. Tap Encrypt\n5. Copy the encrypted text"
                android:textSize="14sp"
                android:textColor="#666666"
                android:layout_marginBottom="16dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="How to Decrypt"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#FF000000"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1. Select Decrypt Text\n2. Paste the encrypted text\n3. Enter the same password\n4. Tap Decrypt"
                android:textSize="14sp"
                android:textColor="#666666"
                android:layout_marginBottom="16dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tips"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#FF000000"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="• Use long passwords with letters, numbers, and symbols.\n• Store passwords safely.\n• Keep the entire encrypted string intact when sharing."
                android:textSize="14sp"
                android:textColor="#666666"
                android:layout_marginBottom="20dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSampleEncrypt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Try Sample Encryption"
                android:backgroundTint="#FF4CAF50"
                android:textColor="#FFFFFFFF"
                android:layout_marginBottom="8dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSampleDecrypt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Try Sample Decryption"
                android:backgroundTint="#FF2196F3"
                android:textColor="#FFFFFFFF" />

        </LinearLayout>

    </ScrollView>

</com.google.android.material.card.MaterialCardView>
